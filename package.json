{
	"scripts": {
		"dev": "bob-tsm --node-env=dev --watch=src src/index.ts",
		"start": "bob-tsm --node-env=prod src/index.ts",
		"test": "cross-env NODE_ENV=test tap --node-arg=--require=bob-tsm"
	},
	"dependencies": {
		"@graphql-tools/load-files": "^6.6.1",
		"fastify": "^4.13.0",
		"fastify-plugin": "^4.5.0",
		"graphql": "^16.6.0",
		"init": "^0.1.2",
		"install": "^0.13.0",
		"ioredis": "^5.3.1",
		"mercurius": "^12.2.0",
		"mercurius-cache": "^4.0.0",
		"mercurius-codegen": "^5.0.1",
		"mercurius-integration-testing": "^6.0.1",
		"prettier": "^2.8.4"
	},
	"devDependencies": {
		"@graphql-typed-document-node/core": "^3.1.2",
		"@types/node": "^18.14.4",
		"@types/tap": "^15.0.8",
		"bob-tsm": "^1.1.2",
		"cross-env": "^7.0.3",
		"esbuild": "^0.17.10",
		"nodemon": "^2.0.20",
		"pino-pretty": "^9.4.0",
		"tap": "^16.3.4",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	},
	"tap": {
		"branches": 80,
		"lines": 80,
		"functions": 80,
		"statements": 80,
		"nyc-arg": [
			"--exclude=**/node_modules/**",
			"--exclude=**/test/**",
			"--exclude=src/codegen.ts"
