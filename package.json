{
	"scripts": {
		"codegen": "NODE_ENV=development IS_CODE_GEN=true dotenv -e .env -- swc-node src/server.ts",
		"dev": "NODE_ENV=development dotenv -e .env -- nodemon --exec node -r @swc-node/register -w src src/server.ts",
		"start": "NODE_ENV=production dotenv -e .env -- swc-node src/server.ts",
		"pretest": "docker-compose -f docker-compose-test.yaml up -d -V --force-recreate && sleep 10 && nr codegen && dotenv -e .env.test -- nix prisma migrate deploy && nix prisma generate",
		"test": "pnpm run pretest && dotenv -e .env.test -- tap --node-arg=--require=@swc-node/register",
		"type:check": "tsc --noEmit"
	},
	"dependencies": {
		"@fastify/autoload": "^5.7.1",
		"@graphql-tools/load-files": "^6.6.1",
		"@prisma/client": "^4.11.0",
		"@sinclair/typebox": "^0.25.24",
		"ajv": "^8.12.0",
		"ajv-formats": "^2.1.1",
		"fastify": "^4.13.0",
		"fastify-plugin": "^4.5.0",
		"graphql": "^16.6.0",
		"ioredis": "^5.3.1",
		"mercurius": "^12.2.0",
		"mercurius-cache": "^4.0.0",
		"mercurius-codegen": "^5.0.1",
		"mercurius-integration-testing": "^6.0.1",
		"prettier": "^2.8.4"
	},
	"devDependencies": {
		"@graphql-typed-document-node/core": "^3.1.2",
		"@swc-node/register": "^1.6.2",
		"@swc/cli": "^0.1.62",
		"@swc/core": "^1.3.41",
		"@types/node": "^18.14.4",
		"@types/tap": "^15.0.8",
		"cross-env": "^7.0.3",
		"dotenv-cli": "^7.1.0",
		"nodemon": "^2.0.21",
		"pino-pretty": "^9.4.0",
		"prisma": "^4.11.0",
		"swc": "^1.0.11",
		"swc-node": "^1.0.0",
		"tap": "^16.3.4",
		"ts-node": "^10.9.1",
		"typescript": "^4.9.5"
	},
	"tap": {
		"branches": 75,
		"lines": 75,
		"functions": 75,
		"statements": 75,
		"nyc-arg": [
			"--exclude=**/node_modules/**",
			"--exclude=**/test/**",
			"--exclude=**/test/utils/**.ts",
			"--exclude=src/codegen.ts",
			"--exclude=src/resolvers/Mutation/index.ts",
			"--exclude=src/resolvers/Query/index.ts",
			"--exclude=src/app.ts"
		]
	}
}